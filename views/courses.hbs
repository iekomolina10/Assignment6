<div class="row">
    <div class="col-md-12">
        <br>
        <h2> Courses</h2> <a href="/courses/add" class="btn btn-success float-right">Add Course</a>
        <hr />

        <table class="table table-responsive table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Course Code</th>
                    <th>Course Description</th>
                </tr>
            </thead>
            <tbody>

                {{#each courses}}
                <tr>
                    <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">remove</a></td>
                    <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                    <td>{{courseDescription}}</td>
                </tr>
                {{/each}}
            </tbody>
          </table>
    </div>
    {{#unless courses}}
    <tr>
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    </tr>
    {{/unless}}
</div>
